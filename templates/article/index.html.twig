{% extends 'base.html.twig' %}

{# Import menu #}
 {% block menu %}
     {{ parent() }}
 {% endblock %}

{% block title %}Article{% endblock %}

{% block body %}
    <div>
        <h3>{{ article.title }}</h3>
        <p>{{ article.content }}</p>
        <p>{{ article.category.name }}</p>
        <p>{{ app.user.email }}</p>
        <p>{{ article.datePostArticle|date("m/d/Y") }}</p>

        <div>
            {% if is_granted('ROLE_USER') %}
                <div>
                    {{ form(form) }}
                </div>
            {% endif %}
            {% for comment in article.comments %}
                <div>
                    <p>{{ comment.content }}</p>
                    <p>par {{ comment.author.email }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}